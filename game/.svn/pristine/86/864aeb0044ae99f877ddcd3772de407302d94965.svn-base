<div class="container carouselContainer">

	<div id="carousel-id" class="carousel slide" data-interval="3000" data-ride="carousel">
		<ol class="carousel-indicators">
			<li data-target="#carousel-id" th:each="img : ${images}"
				th:if="${img.getIndex()==0}"
				th:attr="data-slide-to=${img.getIndex()}" class="active"></li>
			<li data-target="#carousel-id" th:each="img : ${images}"
				th:if="${img.getIndex()>=1}"
				th:attr="data-slide-to=${img.getIndex()}" class=""></li>
		</ol>
		<div class="carousel-inner">
			<div class="item active" th:each="img : ${images}"
				th:if="${img.getIndex()==0}">
				<img class="sizeImg" alt="First slide"
					th:src="@{ ${img.getDirection()} }" />
				<div class="container"> 
					<div class="carousel-caption">
						<h1 th:text="${img.getName()}"></h1>
						<p th:text="${img.getDescription()}"></p>
					</div>
				</div>
			</div>
			<div class="item" th:each="img : ${images}"
				th:if="${img.getIndex()>=1}">
				<img class="sizeImg" alt="First slide"
					th:src="@{ ${img.getDirection()} }" />
				<div class="container">
					<div class="carousel-caption">
						<h1 th:text="${img.getName()}"></h1>
						<p th:text="${img.getDescription()}"></p>
					</div>
				</div>
			</div>
		</div>

		<a class="left carousel-control" href="#carousel-id" data-slide="prev"><span
			class="glyphicon glyphicon-chevron-left"></span></a> <a
			class="right carousel-control" href="#carousel-id" data-slide="next"><span
			class="glyphicon glyphicon-chevron-right"></span></a>
	</div>

</div>